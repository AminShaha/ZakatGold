<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/blue">

    <!-- ImageView at the center -->

    <!-- TextView for Developer Details -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="132dp"
        android:layout_height="171dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/alamin" />

    <TextView
        android:id="@+id/textViewDeveloperDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by: "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_below="@+id/imageViewProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Other TextViews arranged below -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohamad Noor Al Amin Bin Mohd Shahafoddin"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewDeveloperDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- TextView for Matrix Number -->
    <TextView
        android:id="@+id/textViewMatrixNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021843396"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- TextView for Group -->
    <TextView
        android:id="@+id/textViewGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group: RCS2405A"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewMatrixNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewProgrammeCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programme Code: CS240"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- TextView for Additional Information -->
    <TextView
        android:id="@+id/textViewAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Information:\nAny additional details about the application."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewProgrammeCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textAlignment="center" />


    <!-- TextView for Copyright Statement -->
    <TextView
        android:id="@+id/textViewCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright Â© 2023 Amin"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/textViewAdditionalInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- TextView for Application Website URL -->
    <TextView
        android:id="@+id/textViewAppWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Github"
        android:textSize="16sp"
        android:layout_below="@+id/textViewCopyright"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="274dp"
        android:layout_marginBottom="654dp"
        android:background="@color/darkblue"
        android:text="Back"
        android:textColor="@color/white" />


</RelativeLayout>
